<Window x:Class="AitRecoil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ait Recoil"
        Height="440"
        Width="720"
        ResizeMode="NoResize"
        Background="#101010"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">

    <Window.Resources>

        <!-- Card-like GroupBox style -->
        <Style x:Key="CardGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="#1F1F1F"
                                CornerRadius="10"
                                BorderBrush="#333333"
                                BorderThickness="1"
                                Padding="10">
                            <DockPanel>
                                <TextBlock Text="{TemplateBinding Header}"
                                           DockPanel.Dock="Top"
                                           Margin="0,0,0,8"
                                           Foreground="#FFC27C"
                                           FontWeight="SemiBold"
                                           FontSize="13"/>
                                <ContentPresenter/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- General button style -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2E2E2E"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#424242"/>
                                <Setter Property="BorderBrush" Value="#666666"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#303030"/>
                                <Setter Property="Foreground" Value="#777777"/>
                                <Setter Property="BorderBrush" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Labels -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

        <!-- TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

        <!-- ComboBox: light look with black text -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

        <!-- ComboBox items: black text, light background -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="4,2"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="Ait Recoil"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Anti-recoil controller"
                           FontSize="11"
                           Foreground="#AAAAAA"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- Main Card -->
        <Border Grid.Row="1"
                Background="#181818"
                CornerRadius="12"
                Padding="16"
                BorderBrush="#2A2A2A"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT SIDE: Recoil settings + Start/Stop -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Recoil Settings -->
                    <GroupBox Header="Recoil Settings" Style="{StaticResource CardGroupBox}">
                        <StackPanel>
                            <!-- Vertical -->
                            <Grid Margin="0,4,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Vertical:"/>
                                <Slider Grid.Column="1"
                                        Name="sliderVertical"
                                        Minimum="0"
                                        Maximum="50"
                                        TickFrequency="0.01"
                                        SmallChange="0.01"
                                        LargeChange="0.1"
                                        IsSnapToTickEnabled="True"
                                        VerticalAlignment="Center"/>
                                <TextBox Grid.Column="2"
                                         Text="{Binding ElementName=sliderVertical, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}"
                                         HorizontalContentAlignment="Center"/>
                            </Grid>

                            <!-- Horizontal -->
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Horizontal:"/>
                                <Slider Grid.Column="1"
                                        Name="sliderHorizontal"
                                        Minimum="-50"
                                        Maximum="50"
                                        TickFrequency="0.01"
                                        SmallChange="0.01"
                                        LargeChange="0.1"
                                        IsSnapToTickEnabled="True"
                                        VerticalAlignment="Center"/>
                                <TextBox Grid.Column="2"
                                         Text="{Binding ElementName=sliderHorizontal, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F3}"
                                         HorizontalContentAlignment="Center"/>
                            </Grid>

                            <TextBlock Margin="0,8,0,0"
                                       Text="Tip: increase vertical slightly (e.g. 0.15) and adjust horizontal (±0.x) to counter your weapon pattern."
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="#B0B0B0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Start / Stop -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Center">
                        <Button Name="btnStart"
                                Content="Start"
                                Width="110"
                                Click="btnStart_Click"/>
                        <Button Name="btnStop"
                                Content="Stop"
                                Width="110"
                                Margin="8,0,0,0"
                                Background="#FF7043"
                                Click="btnStop_Click"/>
                        <TextBlock Margin="12,0,0,0"
                                   Foreground="#BBBBBB"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   Text="Hold Right + Left mouse to apply recoil."/>
                    </StackPanel>
                </StackPanel>

                <!-- RIGHT SIDE: Presets -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Preset Management -->
                    <GroupBox Header="Preset Management" Style="{StaticResource CardGroupBox}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Preset Name -->
                            <Label Grid.Row="0" Grid.Column="0" Content="Preset name:"/>
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Name="txtPresetName"
                                     Margin="4,0,0,4"
                                     ToolTip="Example: AK-47, M4, etc."/>

                            <!-- Shortcut -->
                            <Label Grid.Row="1" Grid.Column="0" Content="Shortcut key:"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="4,0,0,4">
                                <TextBox Name="txtShortcutKey"
                                         Width="90"
                                         IsReadOnly="True"
                                         ToolTip="Click 'Set Key' and press a key."
                                         HorizontalContentAlignment="Center"/>
                                <Button Name="btnSetShortcut"
                                        Content="Set Key"
                                        Width="70"
                                        Margin="6,0,0,0"
                                        Click="btnSetShortcut_Click"/>
                                <Button Name="btnDeleteShortcut"
                                        Content="Clear"
                                        Width="60"
                                        Margin="6,0,0,0"
                                        Click="btnDeleteShortcut_Click"/>
                            </StackPanel>

                            <!-- Save / Delete buttons -->
                            <StackPanel Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal"
                                        Margin="0,6,0,0"
                                        HorizontalAlignment="Right">
                                <Button Name="btnSavePreset"
                                        Content="Save / Update"
                                        Width="110"
                                        Click="btnSavePreset_Click"/>
                                <Button Name="btnDeletePreset"
                                        Content="Delete"
                                        Width="80"
                                        Margin="6,0,0,0"
                                        Click="btnDeletePreset_Click"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Load Preset -->
                    <GroupBox Header="Load Preset" Style="{StaticResource CardGroupBox}">
                        <StackPanel>
                            <ComboBox Name="comboPresets"
                                      Width="200"
                                      Margin="0,0,0,4"
                                      SelectionChanged="comboPresets_SelectionChanged"
                                      ToolTip="Choose a preset to load its settings."/>
                            <TextBlock Text="Selecting a preset will update the sliders and shortcut."
                                       FontSize="11"
                                       Foreground="#B0B0B0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

            </Grid>
        </Border>

        <!-- Footer / Signature -->
        <TextBlock Grid.Row="2"
                   Text="Auto Recoil Control by Sinex"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontSize="14"
                   FontWeight="Bold"
                   FontStyle="Italic"
                   Foreground="DarkOrange"
                   Margin="0,10,0,0">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="6"
                                  ShadowDepth="0"
                                  Opacity="0.7"/>
            </TextBlock.Effect>
        </TextBlock>

    </Grid>
</Window>
